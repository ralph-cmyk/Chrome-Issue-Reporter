# Cloudflare Configuration for Auto-Updates
# Copy this to .env and fill in your values

# Your Cloudflare Account ID (found in R2 dashboard)
CF_ACCOUNT_ID=your-account-id-here

# R2 Bucket Name
R2_BUCKET_NAME=chrome-issue-reporter-screenshots

# R2 API Credentials (create in Cloudflare R2 â†’ API Tokens)
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key

# Chrome Extension ID (get from chrome://extensions/)
CHROME_EXTENSION_ID=abcdefghijklmnopqrstuvwxyz123456

# Worker URL (after deploying with wrangler)
UPDATE_BASE_URL=https://chrome-issue-reporter-updates.your-account.workers.dev

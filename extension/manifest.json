{
  "manifest_version": 3,
  "name": "FasterTicketReporting",
  "description": "Capture the current page context and file GitHub issues without leaving Chrome.",
  "version": "21.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Create GitHub Issue",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "management"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/login/*",
    "https://*.workers.dev/*",
    "https://*.r2.dev/*"
  ],
  "update_url": "https://chrome-issue-reporter-updates.your-account.workers.dev/update.xml"
}
